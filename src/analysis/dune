(* -*- tuareg -*- *)

module J = Jbuild_plugin.V1
;;

let ocaml_ver =
    Scanf.sscanf J.ocaml_version "%s@.%s@." (fun maj min -> maj ^ min)
;;

let ver =
  if ocaml_ver >= "411" then
    "new"
  else
    "old"
;;

Printf.ksprintf J.send {|
(rule
 (copy# destruct.ml.%s destruct.ml))

(library
 (name merlin_analysis)
 (public_name merlin.analysis)
 (wrapped false)
 (libraries
  config
  merlin_specific
  merlin_extend
  merlin_kernel
  merlin_utils
  parsing
  preprocess
  query_protocol
  typing
  utils))
|} ver
